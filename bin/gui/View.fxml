<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ViewController">
   <children>
      <Label layoutX="38.0" layoutY="41.0" text="Calculate Sum" />
      <TextField fx:id="txtNumber1" layoutX="38.0" layoutY="78.0" promptText="First Number" />
      <TextField fx:id="txtNumber2" layoutX="38.0" layoutY="125.0" promptText="Second Number" />
      <Button fx:id="btnSum" layoutX="38.0" layoutY="179.0" mnemonicParsing="false" onAction="#onBtnSumAction" text="Sum" />
      <Label layoutX="38.0" layoutY="236.0" text="Result = " />
      <Label fx:id="labelResult" layoutX="90.0" layoutY="236.0" />
      <ComboBox fx:id="comboBoxPerson" layoutX="213.0" layoutY="78.0" onAction="#onComboBoxPersonAction" prefWidth="150.0" promptText="Select a person..." />
      <Button fx:id="btnAll" layoutX="213.0" layoutY="125.0" mnemonicParsing="false" onAction="#onBynAllAction" text="All" />
   </children>
</AnchorPane>
